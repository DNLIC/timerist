{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".git",
      ".gitignore",
      "README.md",
      "wordpress-embed-example.html",
      "push-to-github.sh",
      "app/**",
      "components/**",
      "lib/**",
      "styles/**",
      "scripts/**",
      "*.html",
      "*.php",
      "*.md",
      "*.sh",
      "next.config.js",
      "tailwind.config.ts",
      "tsconfig.json",
      "postcss.config.js"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}

